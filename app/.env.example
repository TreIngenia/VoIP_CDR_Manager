# Parametri di configurazione per accesso ad ODOO
ODOO_URL=https://mydomain.odoo.com/
ODOO_DB=odoo_db_name
ODOO_USERNAME=ftp_username
ODOO_API_KEY=myapi_key_here

# Sicurezza Flask
SECRET_KEY=your-very-secret-key-here-change-this

# Configurazione Server FTP
FTP_HOST=ftp.mydomain.ext
FTP_USER=username
FTP_PASSWORD=password
FTP_DIRECTORY=/

# Configurazione Download
DOWNLOAD_ALL_FILES=false
SPECIFIC_FILENAME=
OUTPUT_DIRECTORY=output
FILE_NAMING_PATTERN=monthly
CUSTOM_PATTERN=
FILTER_PATTERN=

# Configurazione Directory e Percorsi
CONFIG_DIRECTORY=config
CATEGORIES_CONFIG_FILE=cdr_categories.json

# Configurazione Schedulazione
SCHEDULE_TYPE=monthly
SCHEDULE_DAY=1
SCHEDULE_HOUR=9
SCHEDULE_MINUTE=0
INTERVAL_DAYS=30
CRON_EXPRESSION=0 9 1 * *

# Configurazione Schedulazione Precisa (opzionale)
SCHEDULE_INTERVAL_TYPE=minutes
SCHEDULE_INTERVAL_VALUE=30

# Configurazione Prezzi VoIP - NUOVI CAMPI
VOIP_PRICE_FIXED=0.020
VOIP_PRICE_MOBILE=0.150
VOIP_MARKUP_PERCENT=0.0
VOIP_PRICE_FIXED_FINAL=0.020
VOIP_PRICE_MOBILE_FINAL=0.150
VOIP_CURRENCY=EUR
VOIP_PRICE_UNIT=per_minute

# Configurazione elenco cotratti
CONTRACTS_CONFIG_DIRECTORY=config
CONTRACTS_CONFIG_FILE=cdr_contracts.json

# Configurazione Applicazione (opzionale)
FLASK_ENV=development
FLASK_DEBUG=true
APP_PORT=5001
APP_HOST=127.0.0.1